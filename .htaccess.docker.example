# Apache Configuration สำหรับ Docker (Root Path)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set base directory (root for Docker)
    RewriteBase /
    
    # อนุญาตให้เข้าถึง static files โดยตรง
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # ส่งทุก request อื่นไปที่ index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Charset
AddDefaultCharset UTF-8

# Disable directory listing
Options -Indexes
