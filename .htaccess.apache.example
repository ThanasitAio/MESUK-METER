# Apache Configuration สำหรับ Apache Server (Subfolder)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set base directory 
    # เปลี่ยน /mesuk/ เป็นชื่อโฟลเดอร์ที่คุณใช้
    RewriteBase /mesuk/
    
    # อนุญาตให้เข้าถึง static files โดยตรง
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # ส่งทุก request อื่นไปที่ index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Charset
AddDefaultCharset UTF-8

# Disable directory listing
Options -Indexes

# ตั้งค่า PHP settings (optional)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
